\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{resume}

% for multilanguages support
\newif\if@en            \@enfalse
\newif\if@fr            \@frfalse
\newif\if@de            \@defalse

% for multicontexts support
\newif\if@sci           \@scifalse
\newif\if@eng           \@engfalse

% others
\newif\if@french        \@frenchfalse
\newif\if@url           \@urlfalse
\newif\if@dot           \@dotfalse

% for multilanguages support
\DeclareOption{en}{\@entrue}
\DeclareOption{fr}{\@frtrue}
\DeclareOption{de}{\@detrue}

% for multicontexts support
\DeclareOption{sci}{\@scitrue}
\DeclareOption{eng}{\@engtrue}

% others
\DeclareOption{french}{\@frenchtrue}
\DeclareOption{url}{\@urltrue}
\DeclareOption{dot}{\@dottrue}

\ProcessOptions

\if@french
\RequirePackage[francais]{babel}
\RequirePackage[utf8]{inputenc}
\fi

\ifx\pdftexversion\undefined
\RequirePackage[dvips]{graphicx}
\else
\RequirePackage[pdftex]{graphicx}
\DeclareGraphicsRule{*}{mps}{*}{}
\DeclareGraphicsExtensions{.pdf,.png,.jpg}
\fi

\if@url
\RequirePackage{url}
\fi

\if@dot
\RequirePackage{tikz}
\usetikzlibrary{shapes,arrows}
\RequirePackage{dot2texi}
\fi

% cvsty inclusion
\RequirePackage{tabularx}
\RequirePackage{ae}
\RequirePackage[T1]{fontenc}
\RequirePackage{CV}

% multilanguages support
\newcommand{\lang}[2]
{%
  \if@en#1\fi%
  \if@fr#2\fi%
}

% multicontexts support
\newcommand{\context}[2]
{%
  \if@sci#1\fi%
  \if@eng#2\fi%
}

\endinput
